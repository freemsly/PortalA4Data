@model CamprayPortal.Web.Models.Support.LoginModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section PageStyle{

}

@section PageScript{
    <script src="/Content/assets/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.min.js" type="text/javascript"></script><!-- slider for products -->
    <!-- BEGIN PAGE LEVEL JAVASCRIPTS (REQUIRED ONLY FOR CURRENT PAGE) -->
    <script src="/Content/assets/frontend/layout/scripts/layout.js" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            Layout.init();
            Layout.initOWL();
        });
    </script>
    <!-- END PAGE LEVEL JAVASCRIPTS -->
}

<div class="main">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="/">@T("common.home")</a></li>
            <li><a href="@Url.Action("HomePage", "Support")">@T("common.support")</a></li>
            <li class="active">@T("common.customerportal")</li>
        </ul>
        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40">
            <!-- BEGIN CONTENT -->
            <div class="col-md-12 col-sm-12">
                <div class="content-page">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>Login</h1>
                            <div class="content-form-page">
                                <div class="row">
                                    <div class="col-md-7 col-sm-7">

                                        @using (Html.BeginForm("CustomerPortal", "Support", new { returnurl = ViewBag.returnUrl??this.Context.Request.QueryString["returnUrl"] }, FormMethod.Post, new { @class = "form-horizontal form-without-legend", role = "form" }))
                                        {
                                            <div class="message-error">
                                                @Html.ValidationSummary(true, T("Account.Login.Unsuccessful").Text)
                                            </div>

                                            <div class="form-group">
                                                <label for="email" class="col-lg-4 control-label">Email <span class="require">*</span></label>
                                                <div class="col-lg-8">
                                                    @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="password" class="col-lg-4 control-label">Password <span class="require">*</span></label>
                                                <div class="col-lg-8">
                                                    @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-8 col-md-offset-4 padding-left-0">
                                                    <a href="@Url.Action("Register")">Register?</a>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20">
                                                    <button type="submit" class="btn btn-primary">Login</button>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                    <div class="col-md-4 col-sm-4 pull-right">
                                        <div class="form-info">
                                            <h2><em>Important</em> Information</h2>
                                            <p>Duis autem vel eum iriure at dolor vulputate velit esse vel molestie at dolore.</p>

                                            <button type="button" class="btn btn-default">More details</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->
    </div>
</div>