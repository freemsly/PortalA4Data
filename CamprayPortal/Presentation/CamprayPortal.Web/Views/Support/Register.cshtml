@model CamprayPortal.Web.Models.Support.RegisterModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@section PageStyle{

}

@section PageScript{
    <script src="/Content/assets/global/plugins/carousel-owl-carousel/owl-carousel/owl.carousel.min.js" type="text/javascript"></script><!-- slider for products -->
    <!-- BEGIN PAGE LEVEL JAVASCRIPTS (REQUIRED ONLY FOR CURRENT PAGE) -->
    <script src="/Content/assets/frontend/layout/scripts/layout.js" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            Layout.init();
            Layout.initOWL();
        });
    </script>
    <!-- END PAGE LEVEL JAVASCRIPTS -->
}

<div class="main">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="/">@T("common.home")</a></li>
            <li><a href="@Url.Action("HomePage", "Support")">@T("common.support")</a></li>
            <li class="active">Create an account</li>
        </ul>
        <!-- BEGIN SIDEBAR & CONTENT -->
        <div class="row margin-bottom-40">
            <!-- BEGIN CONTENT -->
            <div class="col-md-12 col-sm-12">
                <div class="content-page">
                    <div class="row">
                        <div class="content-form-page">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <h1 style="margin-bottom:0">Create an account</h1>
                                    <div class="content-form-page"> 
                                        <div class="row">
                                            <div class="col-md-7 col-sm-7">
                                        
                                                        @using (Html.BeginForm("Register", "Support", FormMethod.Post, new { @class = "form-horizontal form-without-legend", role = "form" }))
                                                        {
                                                         @Html.AntiForgeryToken()
                                                                <div class="row">
                                                                    <div class="message-error col-lg-9 col-md-offset-3">
                                                                        @Html.ValidationSummary()
                                                                    </div>
                                                                </div>
                                                            <div class="form-group">
                                                                <label for="email" class="col-lg-4 control-label">First Name <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="email" class="col-lg-4 control-label">Last Name <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="email" class="col-lg-4 control-label">Company Name <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
                                                                </div>
                                                            </div>

                                                                <div class="form-group" style=" margin-bottom:5px">

                                                                    <div class="col-lg-8 col-md-offset-4" style="padding-left: 0; color:#5ac2df; font-size:10px">
                                                                        @T("common.register.emailasloginaccount.notice")
                                                                    </div>
                                                                </div>

                                                            <div class="form-group">
                                                                <label for="email" class="col-lg-4 control-label">Email <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                                </div>
                                                            </div>
                                                            

                                                            <div class="form-group">
                                                                <label for="email" class="col-lg-4 control-label">Address <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control" })
                                                                </div>
                                                            </div>
                                                            
                                                            <div class="form-group">
                                                                <label for="password" class="col-lg-4 control-label">Password <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <label for="confirm-password" class="col-lg-4 control-label">Confirm Password <span class="require">*</span></label>
                                                                <div class="col-lg-8">
                                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                                                </div>
                                                            </div>

                                                            <div class="form-group">
                                                                <div class="col-lg-1 col-lg-push-4">
                                                                    @Html.CheckBoxFor(m => m.AcceptPrivacyPolicy, new { @class = "form-control" })
                                                                </div>
                                                                <div class="col-lg-8 col-lg-push-4 margin-top-10">
                                                                    <label>@T("Account.Fields.AcceptPrivacyPolicy")</label>
                                                                    <a style="color:#e6400c; cursor: pointer" onclick="javascript: window.open('@Url.Action("PrivacyPolicy", "Common")','','height=400,width=500,top=200,left=200');return;">@T("Account.Fields.AcceptPrivacyPolicy.Read")</a>
                                                                </div>
                                                            </div>

                                                            <div class="row">
                                                                <div class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20" style="text-align:center">
                                                                    <button type="submit" class="btn btn-primary">Create an account</button>
                                                                   
                                                                </div>
                                                            </div>
                                                        }
                                            </div>
                                            <div class="col-md-4 col-sm-4 pull-right">
                                                <div class="form-info">
                                                    <h2><em>Important</em> Information</h2>
                                                    <p>Lorem ipsum dolor ut sit ame dolore  adipiscing elit, sed sit nonumy nibh sed euismod ut laoreet dolore magna aliquarm erat sit volutpat. Nostrud exerci tation ullamcorper suscipit lobortis nisl aliquip  commodo quat.</p>

                                                    <p>Duis autem vel eum iriure at dolor vulputate velit esse vel molestie at dolore.</p>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END SIDEBAR & CONTENT -->
    </div>
</div>