    <link href="/Content/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet">
    <!-- END GLOBAL MANDATORY STYLES -->



    <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->
    <link href="/Content/assets/global/plugins/gritter/css/jquery.gritter.css" rel="stylesheet">
    <link href="/Content/assets/global/plugins/bootstrap-daterangepicker/daterangepicker-bs3.css" rel="stylesheet">
    <link href="/Content/assets/global/plugins/fullcalendar/fullcalendar/fullcalendar.css" rel="stylesheet">
    <link href="/Content/assets/global/plugins/jqvmap/jqvmap/jqvmap.css" rel="stylesheet">
    <!-- END PAGE LEVEL PLUGIN STYLES -->

    <!-- BEGIN PAGE STYLES -->
    <link href="/Content/assets/admin/pages/css/tasks.css" rel="stylesheet">
